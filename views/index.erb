<h2> Welcome! </h2>

<p>We show totally accurate lists of continents and countries!!</p>

<form action="/message" method="POST">
  <label for=username>Username</label>
  <input type=text id=Username name=Username required>

  <label for=message>Password</label>
  <input type=text id=Message name=Message required>

  <input type=submit value="Add Message">
</form>


<% if params[:user_name] %>
  <ul>
  <%= params[:user_name] %>
  <% open_message_array(params[:user_name]).each do |message| %>
    <li><%= message['message'] %></li>
    <% end %>
</ul>

<h1>Messages Left By Other People</h1>
  <ul>
  <% open_all_messages_array.each do |message| %>
    <li><%= message['message'] %></li>
  <% end %>
  </ul>


<% end %>







